// tsconfig.json
{
  "compilerOptions":
  {
    "target": "esnext",
    "module": "esnext",
    "lib": [
      "esnext",
      "dom",
      "dom.iterable",
    ],
    "allowJs": true,
    "removeComments": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": false,
    "noUnusedLocals": true,
    /* Module Resolution Options */
    "moduleResolution": "node",
    "baseUrl": "./",
    "types": [],
    "declaration": true,
    "emitDeclarationOnly": true,
    "outDir": "./build"
  },
  "include": [
    "./src",
  ],
}
